<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:context=".Activity.QandAActivity">
        <TextView
            android:id="@+id/main_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1: Tôi trộn các chất dinh dưỡng theo thứ tự nào?"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:fontFamily="@font/font1"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/detail_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A, B, C, D, F rồi line E Root Igniter. Nên pha vào xô và cho máy sục oxy vào thì khơi pha dd sẽ tan đều."
            android:padding="16dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:textAlignment="textStart"
            android:lineSpacingExtra="8dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            />

    <TextView
        android:id="@+id/main2_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font1"
        android:padding="16dp"
        android:text="2: Tôi có thể giữ dung dịch dinh dưỡng hỗn hợp trong bao lâu?"
        android:textColor="#000"
        android:textIsSelectable="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/detail2_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinh dưỡng cao cấp nên ko có hạn sử dụng, chỉ cần bảo quản tốt dưới nhiệt độ mát, tránh ánh sáng trực tiếp là sẽ để được rất lâu, Để duy trì mức dinh dưỡng tối ưu, chúng tôi khuyên bạn nên thay đổi hồ chứa thuỷ canh của bạn sau mỗi 7 ngày, còn với thổ canh thì pha lần nào tưới lần đó, thừa thì bỏ lần sau pha mới. Đặc biệt có vi sinh Mycorrhizae có hạn sử dụng sau 2 năm kể từ ngày mua."
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textAlignment="textStart"
        android:lineSpacingExtra="8dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            />
    <TextView
        android:id="@+id/main3_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3: Khi nào tôi thêm bộ điều chỉnh pH ?"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/font1"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/detail3_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sau khi bạn thêm A-F nhưng trước khi bạn thêm line E Root Igniter vào thì phải căn chỉnh pH trước rồi. PH tối ưu là giữa 5,8-6,3, nấm rễ phát triển tốt hơn khi pH chuẩn, dinh dưỡng đủ. Bạn cần thêm 1 số công cụ bút đo nữa nhé."
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textAlignment="textStart"
        android:lineSpacingExtra="8dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            />
    <TextView
        android:id="@+id/main4_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4: Các chất điều chỉnh tăng trưởng có được sử dụng trong các sản phẩm Planta không?"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/font1"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/detail4_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không. Chúng tôi không sử dụng bất kỳ chất điều chỉnh tăng trưởng nào trong dòng Nutrient của mình. Điều này bao gồm Paclobutrazol và Daminozide, được chứng minh là có ảnh hưởng tiêu cực đến sức khỏe khi con người ăn phải, đặc biệt là Ung Thư."
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textAlignment="textStart"
        android:lineSpacingExtra="8dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            />
    <TextView
        android:id="@+id/main5_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5: Các sản phẩm Planta có phải là hữu cơ không?"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/font1"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/detail5_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Các sản phẩm dinh dưỡng của chúng tôi là sự pha trộn của tất cả các thành phần hữu cơ và vô cơ tự nhiên, không chứa hormone, nước hoa, thuốc nhuộm hoặc chất điều hòa tăng trưởng. Chúng đã được thiết kế đặc biệt để tối đa hóa khả dụng sinh học của các chất dinh dưỡng để hấp thụ và hiệu quả tối ưu. Chúng tôi hiểu được sự hấp thụ của một khu vườn hữu cơ. Quan trọng hơn, độ chính xác như vậy mang lại kết quả vượt trội với một giải pháp hoàn toàn hữu cơ. Chúng tôi tiếp tục phát triển các sản phẩm hữu cơ để thử nghiệm và sẽ cung cấp cho các thị trường dựa trên những kết quả chúng tôi thu thập được ."
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textAlignment="textStart"
        android:lineSpacingExtra="8dp" />
    </LinearLayout>
</ScrollView>