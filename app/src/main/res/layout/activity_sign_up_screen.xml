<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Wellcome.SignUpScreen">

    <ImageView
        android:id="@+id/imgavatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font1"
            android:lineHeight="45dp"
            android:text="Đăng ký"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font1"
            android:lineHeight="27dp"
            android:text="Tạo tài khoản "
            android:textColor="#000000"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/signup_edt_username"
                android:layout_width="350dp"
                android:layout_height="46dp"
                android:background="@drawable/edittext"
                android:hint="User Name"
                android:fontFamily="@font/font1"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:lineHeight="22.5dp"
                android:textFontWeight="400"
                />
            <EditText
                android:fontFamily="@font/font1"
                android:id="@+id/signup_edt_email"
                android:layout_width="350dp"
                android:layout_height="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext"
                android:hint="E-mail"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:lineHeight="22.5dp"
                android:textFontWeight="400"/>
            <EditText
                android:fontFamily="@font/font1"
                android:id="@+id/signup_edt_password"
                android:layout_width="350dp"
                android:layout_height="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:lineHeight="22.5dp"
                android:textFontWeight="400"/>
            <EditText
                android:fontFamily="@font/font1"
                android:id="@+id/signup_edt_hoten"
                android:layout_width="350dp"
                android:layout_height="46dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext"
                android:hint="Họ tên"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:lineHeight="22.5dp"
                android:textFontWeight="400"/>

             <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Để đăng ký tài khoản, bạn đồng ý "
            android:textColor="#000000"
            android:fontFamily="@font/font1"
            android:textFontWeight="500"
            android:lineHeight="18dp"
            android:textSize="12dp"
            />
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp;"
            android:textColor="#4CAF50"
            android:fontFamily="@font/font1"
            android:textFontWeight="500"
            android:lineHeight="18dp"
            android:textSize="12dp"
            />
<!--        comment link-->
    </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conditions"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/font1"
                    android:textFontWeight="500"
                    android:lineHeight="18dp"
                    android:textSize="12dp"

                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and"
                    android:textColor="#000000"
                    android:fontFamily="@font/font1"
                    android:textFontWeight="500"
                    android:lineHeight="18dp"
                    android:textSize="12dp"
                    android:layout_marginRight="3dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Privacy Policy"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/font1"
                    android:textFontWeight="500"
                    android:lineHeight="18dp"
                    android:textSize="12dp"/>
                <!--        comment link-->
            </LinearLayout>
            <Button
                android:id="@+id/signup_btn_signup"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_gradian"
                android:text="Đăng ký"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/hoac" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/signup_itn_gg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:src="@drawable/gg_icon" />

                <ImageButton
                    android:id="@+id/signup_itn_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:src="@drawable/fb_icon" />
            </LinearLayout>
            <!---->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:lineHeight="18dp"
                    android:text="Tôi đã có tài khoản"
                    android:textColor="#000000"
                    android:textFontWeight="400"
                    android:textSize="12dp"
                    android:fontFamily="@font/font1"
                    />

                <TextView
                    android:fontFamily="@font/font1"
                    android:id="@+id/signup_tx_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="18dp"
                    android:text="Đăng nhập"
                    android:textColor="#009245"
                    android:textFontWeight="400"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>